<?xml version="1.0" encoding="ISO-8859-1" ?> 
<web-app xmlns="http://java.sun.com/xml/ns/javaee"  
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee  
           http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"  
         version="2.5">

    <!-- A continuacion deben declararse todas las Interfaces que se implementan como
         Servlets en el sistema. Para cada Interfaz deben declararse los tags
         <servlet> y <servlet-mapping>  
     -->

<servlet>
      <servlet-name>Login</servlet-name> <!--se identificara como "Login" para su definicion-->
      <servlet-class>interfaces.InterfazLogin</servlet-class> <!-- la clase que lo implementa esta en interfaces.InterfazLogin -->
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>  <!-- "/Login" corresponde al url con el que se accedera desde el navegador -->
    </servlet-mapping>  

